<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customs.CustomListViewProductTF">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/titoloIngleseTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="7dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_toEndOf="@+id/productIngleseImageView"
                android:text="Fac-Simile Inglese"
                android:textSize="25dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/productIngleseImageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"/>

            <TextView
                android:id="@+id/tipologiaAstaIngleseTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titoloIngleseTextView"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/productIngleseImageView"
                android:text="Asta all'inglese"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/conclusaIngleseTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/productIngleseImageView"
                android:layout_marginStart="8dp"
                android:layout_marginTop="110dp"
                android:text="Conclusa"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/offertaAttualeIngleseTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="110dp"
                android:text="â‚¬185"
                android:textColor="#00CC66"
                android:textSize="25dp"
                android:textStyle="bold"/>

            <Chronometer
                android:id="@+id/chronometerInglese"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:countDown="true"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/productIngleseImageView"
                android:layout_alignParentTop="true"
                android:layout_marginTop="110dp"
                android:textSize="25dp"></Chronometer>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>