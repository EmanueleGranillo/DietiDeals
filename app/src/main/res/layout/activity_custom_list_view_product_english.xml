<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customs.CustomListViewProductTF">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/titoloIngleseTextView"
                android:layout_width="249dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="7dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_toEndOf="@+id/productIngleseImageView"
                android:text="Fac-Simile Inglese"
                android:textSize="18dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/productIngleseImageView"
                android:layout_width="150dp"
                android:layout_height="167dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp" />

            <TextView
                android:id="@+id/tipologiaAstaIngleseValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titoloIngleseTextView"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="13dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="3dp"
                android:layout_toEndOf="@+id/tipologiaAstaIngleseTextView"
                android:text="All'inglese"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tipologiaAstaIngleseTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titoloIngleseTextView"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/productIngleseImageView"
                android:text="Tipologia:"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/baseAstaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tipologiaAstaIngleseTextView"
                android:layout_marginStart="8dp"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@+id/productIngleseImageView"
                android:text="Base asta:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/scadenzaIngleseTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/baseAstaTextView"
                android:layout_marginStart="8dp"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@+id/productIngleseImageView"
                android:text="Termina in:"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/baseAstaIngleseValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tipologiaAstaIngleseTextView"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="13dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="3dp"
                android:layout_toEndOf="@+id/baseAstaTextView"
                android:text="€tot"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/scadenzaIngleseValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/baseAstaTextView"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="13dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="3dp"
                android:layout_toEndOf="@+id/scadenzaIngleseTextView"
                android:text="HH:MM:0SS"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/sogliaRialzoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/scadenzaIngleseTextView"
                android:layout_marginStart="8dp"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@+id/productIngleseImageView"
                android:text="Soglia rialzo:"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/sogliaRialzoValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/scadenzaIngleseValueTextView"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="1dp"
                android:layout_toEndOf="@+id/sogliaRialzoTextView"
                android:text="€soglia"
                android:textSize="16dp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>