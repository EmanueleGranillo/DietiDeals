<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F4F8"
    tools:context=".activities.HomepageVenditoreActivity">

    <TextView
        android:id="@+id/esploraTextViewVenditore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:text="Esplora"
        android:textSize="40dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/profiloButtonHomeVenditore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="-20dp"
        android:backgroundTint="#F2F4F8"
        app:icon="@drawable/ic_profilo_foreground"
        app:iconSize="70dp"
        app:iconTint="@color/black" />


    <Button
        android:id="@+id/sellNewProductButton"
        android:layout_width="wrap_content"
        android:layout_height="105dp"
        android:layout_below="@+id/esploraTextViewVenditore"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#FFFFFF"
        android:text="Crea asta"
        android:textColor="#000000"
        android:textSize="24dp"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/leTueAsteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sellNewProductButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="14dp"
        android:text="Le tue aste"
        android:textSize="20dp"
        android:textStyle="bold"/>


    <Button
        android:id="@+id/buttonTutteLeAste"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/leTueAsteTextView"
        android:layout_marginStart="15dp"
        android:layout_marginTop="0dp"
        android:backgroundTint="#00CC66"
        android:text="Tutte"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/buttonAsteAttive"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/leTueAsteTextView"
        android:layout_marginStart="15dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/buttonTutteLeAste"
        android:backgroundTint="#FFFFFF"
        android:text="Attive"
        android:textColor="#000000" />

    <Button
        android:id="@+id/buttonAsteConcluse"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/leTueAsteTextView"
        android:layout_marginStart="15dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/buttonAsteAttive"
        android:backgroundTint="#FFFFFF"
        android:text="Concluse"
        android:textColor="#000000" />


    <ListView
        android:id="@+id/customListViewSellProducts"
        android:layout_width="389dp"
        android:layout_height="77dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:layout_below="@+id/buttonTutteLeAste"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:scrollbars="none" />

    <Button
        android:id="@+id/notificheButtonHomeVenditore"
        android:layout_width="51dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/esploraTextViewVenditore"
        android:layout_marginStart="126dp"
        android:layout_toEndOf="@+id/esploraTextViewVenditore"
        android:gravity="center"
        app:icon="@drawable/ic_notifiche_foreground"
        app:iconGravity="textEnd"
        app:iconSize="50dp"
        app:iconTint="@color/black" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="21dp"
        android:layout_alignStart="@+id/notificheButtonHomeVenditore"
        android:id="@+id/pallinoButton"
        android:layout_alignTop="@+id/notificheButtonHomeVenditore"
        android:layout_alignEnd="@+id/notificheButtonHomeVenditore"
        android:layout_alignBottom="@+id/notificheButtonHomeVenditore"
        android:layout_marginStart="26dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="23dp"
        android:src="@drawable/ic_pallino_foreground" />


</RelativeLayout>