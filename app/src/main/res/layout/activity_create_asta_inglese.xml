<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAstaTF">


    <Button
        android:id="@+id/backButtonCreateAstaInglese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="29dp"
        android:backgroundTint="#F2F4F8"
        app:icon="@drawable/ic_back_foreground"
        app:iconSize="50dp"
        app:iconTint="@color/black" />


    <TextView
        android:id="@+id/textViewDateInsert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="133dp"
        android:layout_marginEnd="50dp"
        android:text="Inserisci le informazioni finali"
        android:textColor="#000000"
        android:textSize="24dp" />


    <EditText
        android:id="@+id/editTextBaseAsta"
        android:layout_width="359dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewDateInsert"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="21dp"
        android:hint="Inserisci base d'asta iniziale"
        android:inputType="numberDecimal" />


    <EditText
        android:id="@+id/intervalloDiTempo"
        android:layout_width="359dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextBaseAsta"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="22dp"
        android:hint="Inserisci intervallo di tempo (opzionale)" />

    <EditText
        android:id="@+id/editTextSogliaRialzo"
        android:layout_width="359dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/intervalloDiTempo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="24dp"
        android:hint="Inserisci soglia di rialzo (opzionale)" />

    <Button
        android:id="@+id/creaButtonAstaInglese"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_below="@id/editTextSogliaRialzo"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="140dp"
        android:backgroundTint="#00CC66"
        android:text="Crea" />


</RelativeLayout>