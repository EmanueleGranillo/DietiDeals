<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customs.CustomListViewProductTF">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/titoloRibassoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="6dp"
                android:layout_toEndOf="@+id/productRibassoImageView"
                android:text="Fac-Simile Ribasso"
                android:textSize="25dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/productRibassoImageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                />

            <TextView
                android:id="@+id/tipologiaAstaRibassoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titoloRibassoTextView"
                android:layout_marginStart="57dp"
                android:layout_marginTop="35dp"
                android:layout_toEndOf="@+id/productRibassoImageView"
                android:text="Asta al ribasso"
                android:textSize="22dp" />

            <!--  <Chronometer
                  android:id="@+id/chronometerRibasso"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:countDown="true"
                  android:layout_marginStart="8dp"
                  android:layout_toEndOf="@+id/productRibassoImageView"
                  android:layout_alignParentTop="true"
                  android:layout_marginTop="110dp"
                  android:textSize="25dp"/>       -->

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>