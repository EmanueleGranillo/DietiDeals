<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AstaIngleseActivity"
    android:background="#F2F4F8">

    <TextView
        android:id="@+id/astaIngleseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Asta all'inglese"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/nomeEditText"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_below="@+id/astaATempoFissoTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="65dp"
        android:hint="Nome prodotto/servizio"
        android:textSize="15dp"
        android:background="@drawable/rounded_edittext_bg"
        android:paddingStart="10dp"/>

    <EditText
        android:id="@+id/categoriaEditText"
        android:layout_width="27dp"
        android:layout_height="40dp"
        android:layout_below="@+id/nomeEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="65dp"
        android:hint="Categoria"
        android:textSize="15dp"
        android:background="@drawable/rounded_edittext_bg"
        android:paddingStart="10dp"/>

    <EditText
        android:id="@+id/descrizioneEditText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/categoriaEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="65dp"
        android:hint="Descrizione (max.500 caratteri)"
        android:textSize="15dp"
        android:background="@drawable/rounded_edittext_bg"
        android:paddingStart="10dp"/>

    <EditText
        android:id="@+id/paroleChiaveEditText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/descrizioneEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="65dp"
        android:hint="Parole-Chiave (opzionale)"
        android:textSize="15dp"
        android:background="@drawable/rounded_edittext_bg"
        android:paddingStart="10dp"/>

    <EditText
        android:id="@+id/baseAstaEditText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/paroleChiaveEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="65dp"
        android:hint="Base d'asta"
        android:textSize="15dp"
        android:background="@drawable/rounded_edittext_bg"
        android:paddingStart="10dp"/>

    <EditText
        android:id="@+id/intervalloTempoEditText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/baseAstaEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="65dp"
        android:hint="Intervallo di tempo fisso"
        android:textSize="15dp"
        android:background="@drawable/rounded_edittext_bg"
        android:paddingStart="10dp"/>

    <EditText
        android:id="@+id/sogliaRialzoEditText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/intervalloTempoEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="65dp"
        android:hint="Soglia di rialzo"
        android:textSize="15dp"
        android:background="@drawable/rounded_edittext_bg"
        android:paddingStart="10dp"/>




    <Button
        android:id="@+id/creaButton"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_below="@id/sogliaRialzoEditText"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:layout_toEndOf="@+id/annullaButton"
        android:backgroundTint="#00CC66"
        android:text="Crea" />

    <Button
        android:id="@+id/annullaButton"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_below="@id/sogliaRialzoEditText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#9A9898"
        android:text="Annulla" />
</RelativeLayout>