<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customs.CustomListViewProductTF">


    <TextView
        android:id="@+id/titleTF"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="7dp"
        android:text="Stampante 3D buone condizioni"
        android:textSize="25dp"
        android:textStyle="bold" />


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageProduct"
        android:layout_below="@+id/titleTF"
        android:layout_marginTop="16dp"
    />


    <TextView
        android:id="@+id/tipologiaAstaValueTF"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleTF"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="3dp"
        android:layout_toEndOf="@+id/tipologiaAstaTF"
        android:text="Tempo fisso"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tipologiaAstaTF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleTF"
        android:layout_marginStart="8dp"
        android:layout_marginTop="21dp"
        android:layout_toEndOf="@+id/imageProduct"
        android:text="Tipologia:"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/expirationTextView"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tipologiaAstaTF"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/imageProduct"
        android:text="Fine asta:"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/expirationTextViewValueTF"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tipologiaAstaValueTF"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="43dp"
        android:layout_toEndOf="@+id/expirationTextView"
        android:text="25/12/2024"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/offertaCorrente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/expirationTextView"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/imageProduct"
        android:text="Offerta attuale:"
        android:textSize="15dp" />


    <TextView
        android:id="@+id/valoreCorrenteTF"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/expirationTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="3dp"
        android:layout_toEndOf="@+id/offertaCorrente"
        android:text="300$"
        android:textColor="#00CC66"
        android:textSize="15sp"
        android:textStyle="bold" />




</RelativeLayout>