<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CreaAstaTempoFissoActivity">


    <Button
        android:id="@+id/backButtonCreateAstaRibasso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="29dp"
        android:backgroundTint="#F2F4F8"
        app:icon="@drawable/ic_back_foreground"
        app:iconSize="50dp"
        app:iconTint="@color/black" />


    <TextView
        android:id="@+id/textViewDateInsert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="47dp"
        android:layout_marginTop="138dp"
        android:layout_marginEnd="46dp"
        android:text="Inserisci le informazioni finali"
        android:textColor="#000000"
        android:textSize="24dp" />


    <EditText
        android:id="@+id/editTextPrezzoDiPartenza"
        android:layout_width="359dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewDateInsert"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="28dp"
        android:hint="Inserisci prezzo di partenza"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/intervalloDiTempoDecremento"
        android:layout_width="359dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextPrezzoDiPartenza"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="24dp"
        android:hint="Inserisci intervallo di tempo (opzionale)" />

    <EditText
        android:id="@+id/editTextSogliaDecremento"
        android:layout_width="359dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/intervalloDiTempoDecremento"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="24dp"
        android:hint="Inserisci importo di decremento (opzionale)" />

    <Button
        android:id="@+id/creaButtonAstaRibasso"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_below="@id/editTextSogliaDecremento"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="93dp"
        android:layout_marginEnd="140dp"
        android:backgroundTint="#00CC66"
        android:text="Crea" />


</RelativeLayout>