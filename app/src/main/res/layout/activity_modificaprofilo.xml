<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModificaProfiloActivity"
    android:background="#F2F4F8">

    <TextView
        android:id="@+id/modificaProfiloTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Modifica Profilo"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/nomeEditText"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_below="@+id/modificaProfiloTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="65dp"
        android:hint="Nome"
        android:textSize="15dp"
        android:background="@drawable/rounded_edittext_bg"
        android:paddingStart="10dp"/>

    <EditText
        android:id="@+id/cognomeEditText"
        android:layout_width="27dp"
        android:layout_height="40dp"
        android:layout_below="@+id/nomeEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="65dp"
        android:hint="Cognome"
        android:textSize="15dp"
        android:background="@drawable/rounded_edittext_bg"
        android:paddingStart="10dp"/>

    <EditText
        android:id="@+id/biografiaEditText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/cognomeEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="65dp"
        android:hint="Bio (max.500 caratteri)"
        android:textSize="15dp"
        android:background="@drawable/rounded_edittext_bg"
        android:paddingStart="10dp"/>

    <EditText
        android:id="@+id/numeroTelefonoEditText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/biografiaEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="65dp"
        android:hint="Numero di telefono"
        android:textSize="15dp"
        android:background="@drawable/rounded_edittext_bg"
        android:paddingStart="10dp"/>

    <EditText
        android:id="@+id/posizioneEditText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/numeroTelefonoEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="65dp"
        android:hint="Posizione"
        android:textSize="15dp"
        android:background="@drawable/rounded_edittext_bg"
        android:paddingStart="10dp"/>

    <EditText
        android:id="@+id/linksitowebEditText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/posizioneEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="65dp"
        android:hint="Link sito web"
        android:textSize="15dp"
        android:background="@drawable/rounded_edittext_bg"
        android:paddingStart="10dp"/>

    <EditText
        android:id="@+id/linkinstagramEditText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/linksitowebEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="65dp"
        android:hint="Link Instagram"
        android:textSize="15dp"
        android:background="@drawable/rounded_edittext_bg"
        android:paddingStart="10dp"/>

    <EditText
        android:id="@+id/linkxEditText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/linkinstagramEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="65dp"
        android:hint="Link X"
        android:textSize="15dp"
        android:background="@drawable/rounded_edittext_bg"
        android:paddingStart="10dp"/>

    <EditText
        android:id="@+id/linkfacebookEditText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/linkxEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="65dp"
        android:hint="Link Facebook"
        android:textSize="15dp"
        android:background="@drawable/rounded_edittext_bg"
        android:paddingStart="10dp" />

    <Button
        android:id="@+id/confermaButton"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_below="@id/linkfacebookEditText"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:layout_toEndOf="@+id/annullaButton"
        android:backgroundTint="#00CC66"
        android:text="Conferma" />

    <Button
        android:id="@+id/annullaButton"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_below="@id/linkfacebookEditText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#9A9898"
        android:text="Annulla" />


</RelativeLayout>