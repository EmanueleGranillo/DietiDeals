<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ModificaProfiloActivity"
    android:background="#F2F4F8">

    <TextView
        android:id="@+id/modificaProfiloTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Modifica Profilo"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/modificaProfiloImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/modificaProfiloTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        app:shapeAppearanceOverlay="@style/circular"
        android:background="#FFFFFF"
        android:src="@drawable/ic_profilo_foreground"/>

    <EditText
        android:id="@+id/nomeEditText"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_below="@+id/modificaProfiloImage"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="65dp"
        android:hint="Nome"
        android:textSize="15dp"
        android:background="@drawable/rounded_edittext_bg"
        android:paddingStart="10dp"/>

    <EditText
        android:id="@+id/cognomeEditText"
        android:layout_width="27dp"
        android:layout_height="40dp"
        android:layout_below="@+id/nomeEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="65dp"
        android:hint="Cognome"
        android:textSize="15dp"
        android:background="@drawable/rounded_edittext_bg"
        android:paddingStart="10dp"/>

    <EditText
        android:id="@+id/biografiaEditText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/cognomeEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="65dp"
        android:hint="Bio (max.500 caratteri)"
        android:textSize="15dp"
        android:background="@drawable/rounded_edittext_bg"
        android:paddingStart="10dp"/>

    <EditText
        android:id="@+id/numeroTelefonoEditText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/biografiaEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="65dp"
        android:hint="Numero di telefono"
        android:textSize="15dp"
        android:background="@drawable/rounded_edittext_bg"
        android:paddingStart="10dp"/>

    <EditText
        android:id="@+id/posizioneEditText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/numeroTelefonoEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="65dp"
        android:hint="Posizione"
        android:textSize="15dp"
        android:background="@drawable/rounded_edittext_bg"
        android:paddingStart="10dp"/>

    <EditText
        android:id="@+id/linksitowebEditText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/posizioneEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="65dp"
        android:hint="Link sito web"
        android:textSize="15dp"
        android:background="@drawable/rounded_edittext_bg"
        android:paddingStart="10dp"/>

    <EditText
        android:id="@+id/linkinstagramEditText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/linksitowebEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="65dp"
        android:hint="Link Instagram"
        android:textSize="15dp"
        android:background="@drawable/rounded_edittext_bg"
        android:paddingStart="10dp"/>





    <Button
        android:id="@+id/confermaButtonModificaProfilo"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_below="@id/linkinstagramEditText"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_toEndOf="@+id/annullaButtonModificaProfilo"
        android:backgroundTint="#00CC66"
        android:text="Conferma" />

    <Button
        android:id="@+id/annullaButtonModificaProfilo"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_below="@id/linkinstagramEditText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#9A9898"
        android:text="Annulla" />

    <ImageView
        android:layout_width="32dp"
        android:layout_height="27dp"
        android:layout_alignTop="@+id/linkinstagramEditText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="0dp"
        android:src="@mipmap/ic_instagram_foreground" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignEnd="@+id/modificaProfiloImage"
        android:layout_alignBottom="@+id/modificaProfiloImage"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/circular_button"
        android:backgroundTint="#00CC66"
        android:src="@mipmap/ic_edit_profile_foreground" />


</RelativeLayout>